<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/bg">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@drawable/bg_layout2">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/logo_aplikasi" />

        <TextView
            android:id="@+id/ganti_passwd"
            style="@style/text_view_style"
            android:paddingTop="20dp"
            android:fontFamily="@font/montserrat"
            android:paddingBottom="20dp"
            android:text="Masukan email yang terdaftar"
            android:textSize="20sp"
            android:gravity="center"/>

        <EditText
            android:id="@+id/email_forgot"
            style="@style/edit_text_style"
            android:drawableStart="@drawable/ic_email"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="10dp"
            android:hint="email"
            android:fontFamily="@font/montserrat"
            android:textColor="#727272"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/button_password_baru"
            style="@style/button_style_bg"
            android:textSize="16sp"
            android:fontFamily="@font/montserrat"
            android:text="Konfirmasi Password Baru"/>

        <TextView
            android:id="@+id/login_kembali"
            style="@style/text_view_style"
            android:paddingTop="30dp"
            android:paddingBottom="30dp"
            android:text="klik disini untuk masuk kembali"
            android:textSize="13sp"
            android:fontFamily="@font/montserrat"
            android:gravity="center"
            android:onClick="loginKembali"/>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>