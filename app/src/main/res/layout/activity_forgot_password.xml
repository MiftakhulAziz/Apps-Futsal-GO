<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_m">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical"
            android:background="@drawable/bg_layout2">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="30dp"
                app:srcCompat="@drawable/logo_aplikasi_y" />

            <TextView
                android:id="@+id/ganti_passwd"
                style="@style/text_view_style"
                android:paddingTop="20dp"
                android:fontFamily="@font/montserrat"
                android:paddingBottom="20dp"
                android:text="Enter registered email"
                android:textSize="20sp"
                android:gravity="center"/>

            <EditText
                android:id="@+id/email_forgot"
                style="@style/edit_text_style"
                android:drawableStart="@drawable/ic_email"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:hint="email"
                android:fontFamily="@font/open_sans"
                android:textColor="#727272"
                android:inputType="textEmailAddress" />

            <Button
                android:id="@+id/button_password_baru"
                style="@style/button_style_bg"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat"
                android:text="Confirm new password"/>

            <TextView
                android:id="@+id/login_kembali"
                style="@style/text_view_style"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:text="Back"
                android:textSize="20sp"
                android:fontFamily="@font/montserrat"
                android:gravity="center"
                android:onClick="loginKembali"/>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>



</android.support.design.widget.CoordinatorLayout>