<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".splash_screen_class"
    android:background="@drawable/mantap">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <ImageView
                android:layout_width="230dp"
                android:layout_height="65dp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:layout_centerInParent="true"
                android:src="@drawable/icon_apps" />


            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/progressAnimationView"
                android:layout_marginTop="330dp"
                android:layout_gravity="center"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:paddingTop="110dp"
                app:lottie_autoPlay="true"
                app:lottie_fileName="material_wave_loading.json"
                app:lottie_loop="true" />

            <TextView
                android:id="@+id/pesanTextView"
                style="@style/dialog_text_splash"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat"
                android:textColor="#fff"
                android:textSize="25sp" />

        </LinearLayout>



</RelativeLayout>